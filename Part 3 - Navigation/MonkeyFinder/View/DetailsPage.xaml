<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyFinder.DetailsPage"
             xmlns:viewmodel="clr-namespace:MonkeyFinder.ViewModel"
             x:DataType="viewmodel:MonkeyDetailsViewModel"
             Title="{Binding Monkey.Name}">

    <ScrollView>
        <VerticalStackLayout Padding ="8,8,8,0">
            <Label Text="{Binding Monkey.Name}"
                   FontSize="Large"
                   FontAttributes="Bold"/>
            <Image Source="{Binding Monkey.Image}"
                   Aspect="AspectFill"
                   HeightRequest="200"/>
            <Label Text="{Binding Monkey.Location}"
                   FontSize="Medium"/>
            <Label Text="{Binding Monkey.Details}"
                   FontSize="Medium"/>
            <Label Text="{Binding Monkey.Population, StringFormat='Population: {0}'}"
                   FontSize="Medium"/>
            <Button Text="Back" 
                    Command="{Binding GoBackCommand}"/>
        </VerticalStackLayout>

    </ScrollView>


</ContentPage>